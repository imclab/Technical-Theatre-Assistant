<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="fill_parent" android:layout_width="fill_parent">
<LinearLayout

	android:id="@+id/main_view" android:orientation="vertical"
	android:padding="10dip" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="10dip"
		android:text="@string/toBuild_text" />
	<Spinner android:id="@+id/tobuild_spinner"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:prompt="@string/toBuild_text"
		android:scrollbarAlwaysDrawVerticalTrack="true" />
	<include layout = "@layout/standard_design" android:id ="@+id/standard_design"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
	 ></include>
	 <include layout = "@layout/doorframe_design" android:id ="@+id/doorframe_design"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
	 ></include>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:paddingLeft="0px">
		<Button android:text="@string/build_text" android:id="@+id/build_button"
			android:layout_width="match_parent" android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
</ScrollView>