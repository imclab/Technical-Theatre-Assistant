<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:id="@+id/number_dialog" android:orientation="vertical">
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLayout1" android:layout_width="wrap_content"
		android:layout_centerHorizontal="true">
		<TextView android:layout_height="wrap_content" android:id="@+id/prompt_text"
			android:layout_width="wrap_content" android:text="@string/enter_a_number"></TextView>
	</LinearLayout>
	<EditText android:inputType="phone" android:id="@+id/number_edit"
		android:layout_width="75dip" android:layout_height="50dip"
		android:layout_below="@id/linearLayout1" android:layout_centerHorizontal="true" android:layout_margin="20dip"></EditText>
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLayout2" android:layout_width="wrap_content"
		android:orientation="horizontal" android:layout_below="@id/number_edit"
		android:layout_centerHorizontal="true" android:weightSum="1">

		<Button android:layout_height="wrap_content" android:text="@string/ok"
			android:layout_width="wrap_content" android:id="@+id/confirm_button"
			android:layout_weight="3.19"></Button>
		<Button android:layout_height="wrap_content" android:text="@string/cancel"
			android:layout_width="wrap_content" android:id="@+id/cancel_button"
			android:layout_weight="3.89" android:layout_marginLeft="10dip"></Button>
	</LinearLayout>
</RelativeLayout>

