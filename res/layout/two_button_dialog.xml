<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center">
   	 	<TextView android:text="Prompt" android:id ="@+id/prompt_text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center"></TextView>
        
    </LinearLayout>
     <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_margin="24dp" android:gravity="center">
    	<Button android:text="@string/ok" android:layout_height="wrap_content" android:id="@+id/confirm_button" android:layout_width="100dp"></Button>
    	<Button android:id="@+id/cancel_button" android:layout_height="wrap_content" android:text="@string/cancel" android:layout_width="100dp"></Button>
    </LinearLayout>
</LinearLayout>