<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name = "ValueButton">
    
    	<!--  The prompt for the button, visible when there is no value present -->
    	<attr name = "prompt" format = "string" />
    	
    	<!--  The prefix for the button, visible when a value is present -->
    	<attr name = "prefix" format = "string" />
    	
    	<!--  The post-text for the button. Visible when a value is present -->
    	<attr name = "post" format = "string" />
    	
    	<!--  The request code for the activity that this button will launch -->
    	<attr name = "requestCode" format = "integer" />
    	
    	<!--  If true, negative values will be allowed. Default value is false -->
    	<attr name = "allowNegative" format = "boolean" />
    	
    	<!--  The number of digits after the decimal. Used for doubles only -->
    	<attr name = "roundTo" format = "integer" />
    	
    	<!--  If true, the button won't be clickable after a value has been assigned to it -->
    	<attr name = "lockValue" format = "boolean" />
    </declare-styleable>
</resources>
